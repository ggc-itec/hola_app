<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th>Publisher</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.link %></td>
        <td><%= game.publisher %></td>
        <td><%= game.year %></td>
        <td><%= game.genre %></td>
        <td><%= game.players %></td>
        <td><%= link_to 'Show', game %></td>
        <%# td><%= link_to 'Edit', edit_game_path(game) %>
        <%# td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %>
        <td><%= link_to 'Comment', 
        { :controller => "comments", :action => "new", :game_id => game.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

